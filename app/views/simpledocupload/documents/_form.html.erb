<%= form_for Document.new do |f| %>
  <%= f.label :file, "Upload paintings:" %>
  <%= f.file_field :file, multiple: true, name: "painting[image]" %>
  <br>
  <div class="actions">
    <%= f.submit 'Start', id:'fileUpload', data: { disable_with: 'Uploading' } %>
  </div>
<% end %>

<br>
